<h3>Users</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
        <a><%= attachment_image_tag user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %></a>
        </td>
        <td>
          <%= user.name %>
        <td>
        フォロー数<%= user.followings.count %>
        </td>
        <td>
        フォロワー数<%= user.followers.count %>
        </td>
        <td>
        <%= link_to "Show", user_path(user.id) %>
        </>
      </tr>
    <% end %>
  </tbody>
</table>